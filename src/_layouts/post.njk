---
layout: base.njk
---

<article class="post">
  <header class="post-header">
    <h1 class="post-title">{{ title }}</h1>
    <time class="post-date" datetime="{{ date | isoDate }}">{{ date | readableDate }}</time>
    {% if tags %}
    <div class="post-tags">
      {% for tag in tags %}
        {% if tag != "posts" %}
        <span class="tag">{{ tag }}</span>
        {% endif %}
      {% endfor %}
    </div>
    {% endif %}
  </header>
  
  <div class="post-content">
    {{ content | safe }}
  </div>
</article>

<nav class="post-navigation">
  <a href="/blog/" class="btn-back">‚Üê Back to Blog</a>
</nav>
